{% extends "base.html.twig" %}

{% block body %}

    <h1>Liste des livres</h1>
    <a href="{{ path('app_admin_book_create') }}">Ajouter un livre</a>
    <table>
        <thead>
            <tr>
                <td>#</td>
                <td>Titre</td>
                <td>Description</td>
                <td>Créé le </td>
                <td>Modifié le </td>
                <td>Prix</td>
                <td>Auteur</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        
            {% for book in books %}
                <tr>
                    <td>{{book.id}} </td>
                    <td>{{book.title}} </td>
                    <td>{{book.description}} </td>
                    <td>{{book.createdAt | date('d/m/Y')}} - {{book.createdAt | date('H:i')}}</td>
                    <td>{{book.updatedAt | date('d/m/Y')}} - {{book.createdAt | date('H:i')}}</td>
                    <td>{{book.price}} </td>
                    <td>{{book.author.name}} </td>
                    <td>
                        <a href="{{ path('app_admin_book_update', {'id': book.id}) }}">Modifier</a>
                        <a href="{{ path('app_admin_book_delete', {'id': book.id}) }}">Supprimer</a>
                    </td>

                </tr>
            {% else %}
                <tr>
                    <td>
                        Aucun livre présent !
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
    <br>
    Total : {{ books | length }}
{% endblock %}